<UserControl x:Class="DesktopMascot.SubScreens.twitter.RegistAccountWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DesktopMascot.SubScreens.twitter"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <Label Content="Access here:" />
        <TextBox x:Name="pinURITextBox" HorizontalScrollBarVisibility="Auto" IsReadOnly="True" Text="processing..." TextChanged="pinURITextBox_TextChanged"/>
        <Label Content="PIN:"/>
        <TextBox x:Name="pinTextBox" />
        <Button x:Name="okButton" Content="OK" IsDefault="True" Click="okButton_Click"/>
        <!--<Button x:Name="cancelButton" Content="Cancel" IsCancel="True" Click="cancelButton_Click"/>-->
    </StackPanel>
</UserControl>
